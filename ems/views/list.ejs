        <thead class="thead‐dark">
            <tr>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            <%employees.forEach(function(entry){%>
                <tr>
                    <td><%=entry.name%></td>
                </tr>
            </tbody>
            <%})%>
        </table>
        <%}else{%>
